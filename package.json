{
  "name": "kubera",
  "version": "0.1.0",
  "description": "Exchange API",
  "main": "dist/server.js",
  "scripts": {
    "postinstall": "npm run build",
    "build": "npx typescript",
    "test": "NODE_ENV=test jest --coverage --verbose",
    "dev": "tsc-watch --onSuccess \"node ./dist/server.js\"",
    "start": "npx pm2 start pm2.yaml",
    "release": "npm version patch -f -m \"Version %s release\" && npm publish",
    "preversion": "npm test",
    "version": "npm run build && git add -f -A dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/katrotz/kubera.git"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "exchange"
  ],
  "author": "Vyacheslav Cotruta <katrotz@gmail.com> (https://katrotz.space)",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/katrotz/kubera/issues"
  },
  "homepage": "https://github.com/katrotz/kubera#readme",
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "jest": "^24.8.0",
    "ts-jest": "^24.0.2",
    "tsc-watch": "^2.2.1",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "@types/compression": "0.0.36",
    "@types/cors": "^2.8.5",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/node": "^12.6.8",
    "@types/request-promise": "^4.1.44",
    "@types/supertest": "^2.0.8",
    "@types/swagger-ui-express": "^3.0.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^5.0.0-alpha.7",
    "pm2": "^3.5.1",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "supertest": "^4.0.2",
    "swagger-ui-express": "^4.0.7"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
